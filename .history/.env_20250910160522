LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===================================================================
# KONEKSI DATABASE (MySQL / MariaDB)
# ===================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=matik_growth
DB_USERNAME=matik_user
DB_PASSWORD=StrongPassword!123

# ===================================================================
# KONEKSI REDIS (WAJIB UNTUK QUEUE, CACHE, SESSION & HORIZON)
# ===================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===================================================================
# DRIVER & KONFIGURASI
# Direkomendasikan menggunakan Redis untuk performa maksimal.
# ===================================================================
BROADCAST_CONNECTION=log
CACHE_STORE=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

FILESYSTEM_DISK=local

# ===================================================================
# KONFIGURASI EMAIL
# Gunakan 'log' untuk development. Ganti ke 'smtp', 'mailgun', dll untuk produksi.
# ===================================================================
MAIL_MAILER=log
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===================================================================
# KUNCI API PIHAK KETIGA
# ===================================================================
# Contoh untuk WhatsApp Provider seperti Twilio, UltraMsg, dll.
WHATSAPP_API_URL=
